<div class="container mt-5">
    <h2 class="text-center">Lista de Componentes</h2>
    <table class="table table-striped table-hover mt-4">
        <thead class="table-dark">
            <tr>
                <th>Foto</th>
                <th>Código</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Cantidad</th>
                <th>Precio</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% if (componentes.length > 0) { %>
                <% componentes.forEach(componente => { %>
                    <tr>
                        <td>
                            <img src="<%= componente.foto.startsWith('http') ? componente.foto : '/upload/' + componente.foto %>" 
                                 alt="<%= componente.nombre %>" 
                                 class="img-thumbnail" 
                                 style="width: 1800px; height: 200px;">
                        </td>
                        
                        
                        <td><%= componente.codigo %></td>
                        <td><%= componente.nombre %></td>
                        <td><%= componente.descripcion %></td>
                        <td><%= componente.cantidad %></td>
                        <td>$<%= componente.precio %></td>
                        <td>
                            <a href="/editar/<%= componente._id %>" class="btn btn-primary btn-sm">Editar</a>
                            <a href="/eliminar/<%= componente._id %>" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="7" class="text-center">No hay componentes registrados.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
