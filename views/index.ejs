
<%- include('layouts/header') %>

    <h1>crud with node.js and exprees</h1>


    <div class="container">
       <div class = "row my-4">
           <div class="col-lg-12">
                 <div class="table-responsive">
                  <table class="table table-stiperd text-center">

                    <thead>
                          <tr>
                            <th>indice</th>
                            <th>codigo</th>
                            <th>nombre</th>
                            <th>fot</th>
                            <th>descripcion</th>
                            <th>cantidad</th>
                            <th>precio</th>
                            <th>acciones</th>
                          </tr>
                    </thead>
                    <tbody>
                      <% componentes.forEach((componente,index) => { %>
                        <tr class="align-middle">
                          <td><%= ++index  %></td>
                          <td> <%= componente.codigo %></td>
                          <td><%= componente.nombre  %></td>
                          <td> <img src="<%= componente.image %>" width="50" class="img-thumbnail"></td>
                          <td><%= componente.descripcion %></td>
                          <td><%= componente.cantidad %></td>
                          <td><%= componente.precio %></td>
                          <td>
                           <a href="/edit"><i class="fa fa-edit fa-lg"></i></a>
                           <a href="/delete"><i class="fa fa-trash fa-lg"></i></a>
                         </td>
                      </tr>
                        <% }) %>
                    </tbody>

                  </table>     

                 </div>

           </div>
       </div>
    </div>

<%- include('layouts/footer') %>